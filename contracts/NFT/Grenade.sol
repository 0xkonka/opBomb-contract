// GrenadeToken with Governance.
contract GrenadeToken is ERC20("Grenade Token", "Grenade"), Ownable {
    using SafeMath for uint256;

    INFT public NFTaddr;
    address public masterchef;

    uint256 constant NFTmintAmount = 1 ether;

    function initialize(
        address _NFTaddr,
        address _masterchef
    ) public onlyOwner {
        require(_NFTaddr != address(0));
        require(_masterchef != address(0));
        NFTaddr = INFT(_NFTaddr);
        masterchef = _masterchef;
    }

    function mint(address _to, uint256 _amount) public onlyOwner {
        _mint(_to, _amount);
    }

    function mintforNFTholder(address _to) public {
        require(address(NFTaddr) != address(0));
        uint256[] memory ids_ = NFTaddr.tokensOfOwner(_msgSender());
        require(ids_.length > 0, "Mint: not NFT holder");
        uint256 totalType_;
        for (uint256 i = 0; i < ids_.length; i++) {
            totalType_ += NFTaddr.tokenTypes(ids_[i]);
        }

        _mint(_to, NFTmintAmount * totalType_);
    }

    function transfer(
        address to,
        uint256 amount
    ) public virtual override returns (bool) {
        // Grenade token can not be traded, only able to transferable to eoa wallet or Basebomb masterchef
        if (Address.isContract(to)) {
            // In case to addr is smart contract , not eoa wallet
            require(
                to == masterchef, // only masterchef can tranfer grenade token
                "Address: can't trasnfer token to contract"
            );
        }
        _transfer(_msgSender(), to, amount);
        return true;
    }
}
